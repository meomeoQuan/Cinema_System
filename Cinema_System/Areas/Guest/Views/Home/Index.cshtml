        <section class="booking-nav" style="width: 1275px;">
        <div class="booking-container">
            <span class="booking-title">Book Ticket</span>
            <select class="booking-select" id="cinema">
                <option value="">1. Chọn Rạp</option>
                <option value="rap1">Rạp 1</option>
                <option value="rap2">Rạp 2</option>
            </select>

            <select class="booking-select" id="movie">
                <option value="">2. Chọn Phim</option>
                <option value="phim1">Phim 1</option>
                <option value="phim2">Phim 2</option>
            </select>

            <select class="booking-select" id="date">
                <option value="">3. Chọn Ngày</option>
                <option value="ngay1">20/02/2025</option>
                <option value="ngay2">21/02/2025</option>
            </select>

            <select class="booking-select" id="showtime">
                <option value="">4. Chọn Suất</option>
                <option value="suat1">10:00</option>
                <option value="suat2">14:00</option>
            </select>

            <button class="booking-button" onclick="bookTicket()">BOOK</button>
        </div>
