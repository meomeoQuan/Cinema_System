<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Snack&Drink and Gift</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/product.css">
</head>
<body>
    <div class="container my-5">
        <!-- Banner Section -->
        <div class="banner mb-4">
            <img src="~/css/images/banner1.jpg" alt="Banner" class="img-fluid">
        </div>
        <!-- SNACKS Section -->
        <section class="mb-5">
            <h2 class="mb-4 text-center">SNACKS</h2>
            <div class="row">
                <!-- Product 1 -->
                <div class="col-md-3">
                    <div class="card product-card">
                        <img src="~/css/images/pro1.jpg" alt="Snack 1" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">Popcorn Cheese</h5>
                            <p class="card-text">mix with cheese</p>
                            <p class="card-text"><small class="text-muted">Type: Snack</small></p>
                            <p class="card-text"><small class="text-muted">Stock: 12</small></p>
                            <p class="card-text"><strong>50.000VND</strong></p>
                            <button class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
                <!-- Product 2 -->
                <div class="col-md-3">
                    <div class="card product-card">
                        <img src="~/css/images/pro2.jpg" alt="Snack 2" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">Popcorn Caramel</h5>
                            <p class="card-text">mix with Caramel</p>
                            <p class="card-text"><small class="text-muted">Type: Snack</small></p>
                            <p class="card-text"><small class="text-muted">Stock: 10</small></p>
                            <p class="card-text"><strong>50.000VND</strong></p>
                            <button class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
                <!-- Product 3 -->
                <div class="col-md-3">
                    <div class="card product-card">
                        <img src="~/css/images/pro3.jpg" alt="Snack 3" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">Popcorn Mix</h5>
                            <p class="card-text">Mix with Caramel and Cheese.</p>
                            <p class="card-text"><small class="text-muted">Type: Snack</small></p>
                            <p class="card-text"><small class="text-muted">Stock: 20</small></p>
                            <p class="card-text"><strong>50.000VND</strong></p>
                            <button class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
                <!-- Product 4 -->
                <div class="col-md-3">
                    <div class="card product-card">
                        <img src="~/css/images/pro3.jpg" alt="Snack 4" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">Popcorn Cheese</h5>
                            <p class="card-text">Traditional Popcorn</p>
                            <p class="card-text"><small class="text-muted">Type: Snack</small></p>
                            <p class="card-text"><small class="text-muted">Stock: 8</small></p>
                            <p class="card-text"><strong>50.000VND</strong></p>
                            <button class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <a href="#" class="btn btn-link mt-3 ">More Snacks</a>
            </div>
        </section>

        <!-- DRINKS Section -->
        <section class="mb-5">
            <h2 class="mb-4 text-center">DRINKS</h2>
            <div class="row">
                <!-- Product 1 -->
                <div class="col-md-3">
                    <div class="card product-card">
                        <img src="~/css/images/pro4.jpg" alt="Drink 1" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">Boba Tea</h5>
                            <p class="card-text">Refreshing drink to quench your thirst.</p>
                            <p class="card-text"><small class="text-muted">Type: Drink</small></p>
                            <p class="card-text"><small class="text-muted">Stock: 25</small></p>
                            <p class="card-text"><strong>20.000VND</strong></p>
                            <button class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
                <!-- Product 2 -->
                <div class="col-md-3">
                    <div class="card product-card">
                        <img src="~/css/images/pro5.jpg" alt="Drink 2" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">Orange Juice</h5>
                            <p class="card-text">Sweet and fruity drink for a burst of flavor.</p>
                            <p class="card-text"><small class="text-muted">Type: Drink</small></p>
                            <p class="card-text"><small class="text-muted">Stock: 18</small></p>
                            <p class="card-text"><strong>20.000VND</strong></p>
                            <button class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
                <!-- Product 3 -->
                <div class="col-md-3">
                    <div class="card product-card">
                        <img src="~/css/images/drink2.png" alt="Drink 3" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">Coke 32Oz</h5>
                            <p class="card-text">Energy drink to keep you going.</p>
                            <p class="card-text"><small class="text-muted">Type: Drink</small></p>
                            <p class="card-text"><small class="text-muted">Stock: 12</small></p>
                            <p class="card-text"><strong>20.000VND</strong></p>
                            <button class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
                <!-- Product 4 -->
                <div class="col-md-3">
                    <div class="card product-card">
                        <img src="~/css/images/drink1.png" alt="Drink 4" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">Sprite</h5>
                            <p class="card-text">Classic soda for a nostalgic taste.</p>
                            <p class="card-text"><small class="text-muted">Type: Drink</small></p>
                            <p class="card-text"><small class="text-muted">Stock: 30</small></p>
                            <p class="card-text"><strong>20.000VND</strong></p>
                            <button class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <a href="#" class="btn btn-link mt-3">More Drinks</a>
            </div>
        </section>

        <!-- SPECIAL COMBO Section -->
        <section class="mb-5">
            <h2 class="mb-4 text-center">SPECIAL COMBO</h2>
            <div class="row">
                <!-- Product 1 -->
                <div class="col-md-4">
                    <div class="card product-card">
                        <img src="~/css/images/popcorn1.png" alt="Combo 1" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">COMBO A</h5>
                            <p class="card-text">2 coke + 1 corn cheese + 1 corn caramel</p>
                            <p class="card-text"><small class="text-muted">Type: Combo</small></p>
                            <p class="card-text"><small class="text-muted">Stock: 8</small></p>
                            <p class="card-text"><strong>150,000VND</strong></p>
                            <button class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
                <!-- Product 2 -->
                <div class="col-md-4">
                    <div class="card product-card">
                        <img src="~/css/images/popcorn2.png" alt="Combo 2" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">COMBO B</h5>
                            <p class="card-text">4 coke + 2 corn cheese + 2 corn caramel</p>
                            <p class="card-text"><small class="text-muted">Type: Combo</small></p>
                            <p class="card-text"><small class="text-muted">Stock: 10</small></p>
                            <p class="card-text"><strong>100,000VND</strong></p>
                            <button class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
                <!-- Product 3 -->
                <div class="col-md-4">
                    <div class="card product-card">
                        <img src="~/css/images/popcorn3.png" alt="Combo 3" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">COMBO C</h5>
                            <p class="card-text">1 sprite + mix popcorn cheese caramel</p>
                            <p class="card-text"><small class="text-muted">Type: Combo</small></p>
                            <p class="card-text"><small class="text-muted">Stock: 6</small></p>
                            <p class="card-text"><strong>70,000VND</strong></p>
                            <button class="btn btn-primary">Add</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <a href="#" class="btn btn-link mt-3">More Combos</a>
            </div>
        </section>

        <!-- SPECIAL GIFTS Section -->
        <section>
            <h2 class="mb-4 text-center">SPECIAL GIFTS</h2>
            <div class="row align-content-center">
                <!-- Product 1 -->
                <div class="col-md-6 gift-card">
                    <div class="card product-card">
                        <img src="~/css/images/gift1.jpg" alt="Special Gift 1" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">Special Gift 1</h5>
                            <p class="card-text">1 Teddy Bear + 1 Bottle</p>
                            <p class="card-text"><small class="text-muted">Type: Gift</small></p>
                            <p class="card-text"><small class="text-muted">Stock: 3</small></p>
                            <p class="card-text"><strong>$50.00</strong></p>
                            <button class="btn btn-primary">Exchange</button>
                        </div>
                    </div>
                </div>
                <!-- Product 2 -->
                <div class="col-md-6 gift-card">
                    <div class="card product-card">
                        <img src="~/css/images/gift3.jpg" alt="Special Gift 2" class="card-img">
                        <div class="card-body">
                            <h5 class="card-title">Special Gift 2</h5>
                            <p class="card-text">Teddy Bear</p>
                            <p class="card-text"><small class="text-muted">Type: Gift</small></p>
                            <p class="card-text"><small class="text-muted">Stock: 2</small></p>
                            <p class="card-text"><strong>$75.00</strong></p>
                            <button class="btn btn-primary">Exchange</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex justify-content-center">
                <a href="#" class="btn btn-link mt-3">More Special Gifts</a>
            </div>
        </section>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="script.js"></script>
</body>
</html>

@section Scripts {
	<script src="~/js/"></script>
}
