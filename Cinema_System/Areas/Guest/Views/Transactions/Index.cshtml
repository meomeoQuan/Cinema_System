@using Cinema.Utility
@model IEnumerable<Cinema.Models.OrderTable>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order Management</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
    <link rel="stylesheet" href="~/css/cart.css" />
</head>
<body>

    <!-- Giao diện tiêu đề -->
    <section>
        <h2 class="font-weight-bold pt-5 cart-title">Your Orders</h2>
        <hr>
    </section>

    <!-- Table to display orders -->
    <section id="order-container" class="container my-5">
        <table width="100%">
            <thead>
                <tr>
                    <td>Remove</td>
                    <td>Order ID</td>
                    <td>Date</td>
                    <td>Amount</td>
                    <td>Status</td>
                    <td class="text-center">Actions</td>
                </tr>
            </thead>

            <tbody class="text-table">
                @foreach (var orderTable in Model)
                {
                    <tr>
                        <td>
                            <a href="#"><i class="fas fa-trash-alt"></i></a>
                        </td>
                        <td>@orderTable.OrderID</td>
                        <td>@orderTable.CreatedAt.ToString("dd/MM/yyyy")</td>
                        <td>@orderTable.TotalAmount.ToString("C0", new System.Globalization.CultureInfo("vi-VN"))</td>
                        <td>@orderTable.Status</td>
                        <td class="text-center">
                            <div class="d-flex gap-2 justify-content-center">
                                <button class="btn btn-primary btn-sm view-btn" data-order-id="@orderTable.OrderID">
                                    <i class="fas fa-eye"></i> View
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </section>

</body>
</html>
